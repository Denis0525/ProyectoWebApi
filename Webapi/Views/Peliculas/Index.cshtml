@{
    ViewData["Title"] ="Lista Peliculas";
}
<div class="container py-4">
<div class="row mb-4">
    <div class="col-8">
        <h2 class="text-primary">
            <i class="fas fa-list-alt"></i>Peliculas
        </h2>
    </div>
    <div class="col-4 text-end">
        <a asp-action="Create" class="btn btn-success text-white">
            <i class="fas fa-plus"></i> Crear Nueva Pelicula
        </a>
    </div>
</div>
<table id="tlbPeliculas" class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Duración</th>
                <th>Fecha Creación</th>
                <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        <!--Aquí  va la informacion-->
    </tbody>
</table>
</div>
@section Scripts{
    <script src="~/js/pelicula.js"></script>
}